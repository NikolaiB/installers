<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<installer-script authoringTool="Packages" authoringToolVersion="1.1.3" authoringToolBuild="2B112" minSpecVersion="1.0">
    <options customize="always"/>
    <title>Subutai Social</title>
    <license file="LICENSE"/>
    <readme file="ReadMe.rtf"/>
    <installation-check script="memory_check();"/>
    <script>function memory_check() {
      if(!(parseInt(system.sysctl('hw.memsize')) >= 8000000000)) {
        my.result.title = 'Warning';
        my.result.message = 'You have less 8Gb RAM.';
        my.result.type = 'Warning';
        return false;
      }
      return true;
    }
    </script>
    <choices-outline>
        <line choice="installer_choice_1"/>
        <line choice="installer_choice_2"/>
        <line choice="installer_choice_3"/>
    </choices-outline>
    <choice id="installer_choice_1" start_enabled="false" start_selected="true" title="Resource host" description="">
        <pkg-ref id="io.subutai.pkg.rh"/>
    </choice>
    <choice id="installer_choice_2" title="Management host" description="">
        <pkg-ref id="io.subutai.pkg.mh"/>
    </choice>
    <choice id="installer_choice_3" title="Tray Application" description="">
        <pkg-ref id="io.subutai.pkg.services"/>
    </choice>
